<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GeneticFactor">



    <TextView
        android:id="@+id/genetic_factor_heading"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:text="Genetische Belastung"/>

    <TextView
        android:id="@+id/genetic_factor_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/genetic_factor_heading"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/genetic_factor_heading"
        android:text="mindestens ein Elternteil an Lungen-/Bronchialkarzinom erkrankt?" />

    <RadioGroup
        android:id="@+id/genetic_factor_choice"
        android:layout_width="352dp"
        android:layout_height="27dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/genetic_factor_question"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/genetic_factor_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ja" />

        <RadioButton
            android:id="@+id/genetic_factor_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nein" />
    </RadioGroup>


    <TextView
        android:id="@+id/genetic_factor_risk_fac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="100dp"
        android:text="" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="89dp"
        android:background="?android:attr/listDivider" />

    <Button
        android:id="@+id/button_genetic_factor_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:text="ZurÃ¼ck" />

    <Button
        android:id="@+id/button_genetic_factor_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weiter"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"/>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondHandSmoke">

    <TextView
        android:id="@+id/second_hand_smoke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:text="Passivrauchexposition?" />

    <RadioGroup
        android:id="@+id/second_hand_smoke_choice"
        android:layout_width="352dp"
        android:layout_height="27dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/second_hand_smoke"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/second_hand_smoke_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ja" />

        <RadioButton
            android:id="@+id/second_hand_smoke_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nein" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/second_hand_smoke_source_choice"
        android:layout_width="352dp"
        android:layout_height="27dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/second_hand_smoke_choice"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/second_hand_smoke_partner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Durch den Partner" />

        <RadioButton
            android:id="@+id/second_hand_smoke_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Am Arbeitsplatz" />
    </RadioGroup>

    <TextView
        android:id="@+id/second_hand_smoke_20_years"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/second_hand_smoke"
        android:layout_marginTop="150dp"
        android:text="Passivrauchexposition > 20 Jahre?" />

    <RadioGroup
        android:id="@+id/second_hand_smoke_20_years_choice"
        android:layout_width="352dp"
        android:layout_height="27dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/second_hand_smoke_20_years"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/second_hand_smoke_20_years_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ja" />

        <RadioButton
            android:id="@+id/second_hand_smoke_20_years_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nein" />
    </RadioGroup>

    <TextView
        android:id="@+id/second_hand_smoke_risk_fac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="100dp"
        android:text="" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="89dp"
        android:background="?android:attr/listDivider" />

    <Button
        android:id="@+id/button_second_hand_smoke_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:text="ZurÃ¼ck" />

    <Button
        android:id="@+id/button_second_hand_smoke_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weiter"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"/>




</RelativeLayout>